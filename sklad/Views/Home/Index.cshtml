@model IEnumerable<sklad.Models.Thing>
@using sklad.Models

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div id="filtersCol" class="col-5 col-md-3 border-top border-right">
        <ul class="nav nav-tabs nav-fill" id="filtersTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="allTab" data-toggle="tab" role="tab" aria-controls="allFilters" href="#allFilters" aria-selected="true">All</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="selectedTab" data-toggle="tab" role="tab" aria-controls="selectedFilters" href="#selectedFilters" aria-selected="false">Selected</a>
            </li>
        </ul>
        <div class="tab-content" id="filtersTabContent">
            <div id="allFilters" class="tab-pane fade show active" role="tabpanel">

                <div class="card">
                    <div class="card-header" id="headingCategory">
                        <h5 class="mb-0 d-flex">
                            <button class="btn btn-link flex-fill d-flex" type="button" data-toggle="collapse" data-target="#collapseCategory" aria-expanded="true" aria-controls="collapseCategory">
                                <span class="mr-auto">Category</span>
                                <span class="oi oi-chevron-top ml-auto"></span>
                            </button>
                        </h5>
                    </div>
                    <div id="collapseCategory" class="collapse show">
                        <div class="card-body ">
                            @*<p><input type="checkbox" /> Display</p>
                            <p><input type="checkbox" /> HDD</p>
                            <p><input type="checkbox" /> RAM</p>
                            <p><input type="checkbox" /> CPU</p>
                            <p><input type="checkbox" /> Motherboard</p>*@
                            @foreach (var p in Enum.GetNames(typeof(PropertyTypes)))
                            {
                                <p><input type="checkbox" />@p</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header" id="headingAccounts">
                        <h5 class="mb-0 d-flex">
                            <button class="btn btn-link flex-fill d-flex" type="button" data-toggle="collapse" data-target="#collapseAccounts" aria-expanded="true" aria-controls="collapseAccounts">
                                <span class="mr-auto">Accounts</span>
                                <span class="oi oi-chevron-top ml-auto"></span>
                            </button>
                        </h5>
                    </div>
                    <div id="collapseAccounts" class="collapse show">
                        <div class="card-body ">
                            @*<p><input type="checkbox" /> 1512</p>
                            <p><input type="checkbox" /> 1515</p>
                            <p><input type="checkbox" /> 1517</p>
                            <p><input type="checkbox" /> 1518</p>*@
                            @foreach (var ac in ViewBag.Accounts)
                            {
                                <p><input type="checkbox" />@ac</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header" id="headingWorks">
                        <h5 class="mb-0 d-flex">
                            <button class="btn btn-link d-flex flex-fill" type="button" data-toggle="collapse" data-target="#collapseWorks" aria-expanded="true" aria-controls="collapseWorks">
                                <span class="mr-auto">Works</span>
                                <span class="oi oi-chevron-top ml-auto"></span>
                            </button>
                        </h5>
                    </div>
                    <div id="collapseWorks" class="collapse show">
                        <div class="card-body ">
                            @*<p><input type="checkbox" /> Parametr</p>
                            <p><input type="checkbox" /> Grom-2</p>
                            <p><input type="checkbox" /> Barva-A</p>
                            <p><input type="checkbox" /> Tsylindr</p>*@
                            @foreach (var wk in ViewBag.Works)
                            {
                                <p><input type="checkbox" />@wk</p>
                            }
                        </div>
                    </div>
                </div>


                <div class="card">
                    <div class="card-header" id="headingType">
                        <h5 class="mb-0 d-flex">
                            <button class="btn btn-link flex-fill d-flex" type="button" data-toggle="collapse" data-target="#collapseType" aria-expanded="true" aria-controls="collapseType">
                                <span class="mr-auto">Type</span>
                                <span class="oi oi-chevron-top ml-auto"></span>
                            </button>
                        </h5>
                    </div>
                    <div id="collapseType" class="collapse show">
                        <div class="card-body ">
                            <p><input type="checkbox" /> Main</p>
                            <p><input type="checkbox" /> Stocks</p>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header" id="headingPrice">
                        <h5 class="mb-0 d-flex">
                            <button class="btn btn-link flex-fill d-flex" type="button" data-toggle="collapse" data-target="#collapsePrice" aria-expanded="true" aria-controls="collapsePrice">
                                <span class="mr-auto">Price</span>
                                <span class="oi oi-chevron-top ml-auto"></span>
                            </button>
                        </h5>
                    </div>
                    <div id="collapsePrice" class="collapse show">
                        <div class="card-body ">
                            from
                            <input class="field " id="priceFrom" type="number"
                                   value="15" />
                            to
                            <input class="field " id="priceTo" type="number"
                                   value="35000" />
                            <button class="btn btn-info btn-sm ">OK</button>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header" id="headingYear">
                        <h5 class="mb-0 d-flex">
                            <button class="btn btn-link flex-fill d-flex" type="button" data-toggle="collapse" data-target="#collapseYear" aria-expanded="true" aria-controls="collapseYear">
                                <span class="mr-auto">Year</span>
                                <span class="oi oi-chevron-top ml-auto"></span>
                            </button>
                        </h5>
                    </div>
                    <div id="collapseYear" class="collapse show">
                        <div class="card-body">
                            from
                            <input class="field " id="yearFrom" type="number"
                                   value="1973" />
                            to
                            <input class="field " id="yearTo" type="number"
                                   value="@DateTime.Now.Year" />
                            <button class="btn btn-info btn-sm ">OK</button>
                        </div>
                    </div>
                </div>

            </div>
            <div id="selectedFilters" class="tab-pane fade" role="tabpanel">

            </div>
        </div>
    </div>
    <div class="col-7 col-md-9">
        <h2>Index</h2>

        <div class="row">
            <span class="col-auto mr-auto">
                @Html.ActionLink("Create New", "Create")
            </span>
            <span class="col-auto">
                <label>
                    Search:
                    <input type="text" id="searchInput" class="form-control-sm" placeholder="Search for..." onkeyup="tableSearch()"/>
                </label>
            </span>    
        </div>

        <div class="table-responsive">
            <table id="resultTable" class="table table-sm table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.WorkName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Account)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SerialNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PassportNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InventoryNumb)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MeasureUnit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProduceDate)
                        </th>

                        <!-- @*<th>
                             @Html.DisplayNameFor(model => model.FromWhere)
                         </th>
                         <th>
                             @Html.DisplayNameFor(model => model.DocNumber)
                         </th>
                         <th>
                             @Html.DisplayNameFor(model => model.DocDate)
                         </th>
                         <th>
                             @Html.DisplayNameFor(model => model.DocType)
                         </th>
                         <th>
                             @Html.DisplayNameFor(model => model.ProdType)
                         </th>*@-->
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="clickable-row" data-href=@Url.Action("Edit", "Home", new { Id = item.Id })>
                            @Html.HiddenFor(modelItem => item.Id)
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Account)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SerialNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PassportNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InventoryNumb)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MeasureUnit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProduceDate)
                            </td>

                            <!-- @*<td>
                                 @Html.DisplayFor(modelItem => item.FromWhere)
                             </td>
                             <td>
                                 @Html.DisplayFor(modelItem => item.DocNumber)
                             </td>
                             <td>
                                 @Html.DisplayFor(modelItem => item.DocDate)
                             </td>
                             <td>
                                 @Html.DisplayFor(modelItem => item.DocType)
                             </td>
                             <td>
                                 @Html.DisplayFor(modelItem => item.ProdType)
                             </td>*@-->

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
